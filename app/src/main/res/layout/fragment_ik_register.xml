<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.ik_register">

    <ImageView
        android:id="@+id/brickWall"
        android:layout_width="0dp"
        android:layout_height="151dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/brick_wall"
        android:shadowDx="10"
        android:shadowDy="10"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ikTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#9e9e9e"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:text="The Iron Kitchen"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="27sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="@+id/brickWall"
        app:layout_constraintStart_toStartOf="@+id/brickWall"
        app:layout_constraintTop_toTopOf="@+id/brickWall"
        app:layout_constraintBottom_toBottomOf="@+id/brickWall"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:background="#66000000"
        android:hint="Name"
        android:inputType="textPersonName"
        android:maxLength="35"
        android:textAlignment="center"
        android:textColorHint="#fff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pwTxtReg"
        app:layout_constraintTop_toBottomOf="@+id/brickWall" />

    <EditText
        android:id="@+id/pwTxtReg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:background="#66000000"
        android:hint="password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="#fff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pwVerTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/pwVerTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:background="#66000000"
        android:hint="password verification"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="#fff"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/emailTxtReg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwTxtReg" />

    <EditText
        android:id="@+id/emailTxtReg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:background="#66000000"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="#fff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/emVerTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwVerTxt" />

    <EditText
        android:id="@+id/emVerTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:background="#66000000"
        android:hint="email verification"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="#fff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/registerB"
        app:layout_constraintTop_toBottomOf="@+id/emailTxtReg" />


    <Button
        android:id="@+id/registerB"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        android:text="Register"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emVerTxt" />

</android.support.constraint.ConstraintLayout>




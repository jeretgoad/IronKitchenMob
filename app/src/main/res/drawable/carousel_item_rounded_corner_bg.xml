<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- we define background color -->
    <solid android:color="#dedede" />

    <!-- we define border color and thick -->
    <stroke
        android:width="1dp"
        android:color="#ababab" />


    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners android:radius="1dp"
        android:bottomRightRadius="3dp" android:bottomLeftRadius="3dp"
        android:topLeftRadius="1.5dp" android:topRightRadius="1.5dp"/>

</shape>